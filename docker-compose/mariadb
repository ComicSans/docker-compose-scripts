# Use root/example as user/password credentials
version: '3.1'

services:
  db:
    image: mariadb
    restart: always
    container_name: mariadb
    environment:
      MARIADB_ROOT_PASSWORD: root
    stop_grace_period: 30s
    hostname: db
    volumes:
      - ../configs/mariadb/conf.d:/etc/mysql/conf.d
      - ../configs/mariadb/data:/var/lib/mysql
    healthcheck:
      interval: 30s
      retries: 3
      test:
        [
          "CMD",
          "healthcheck.sh",
          "--su-mysql",
          "--connect",
          "--innodb_initialized"
        ]
      timeout: 30s
    networks:
      default:
        ipv4_address: 192.168.178.200
  adminer:
    image: adminer
    container_name: adminer
    restart: always
    hostname: adminer
    depends_on:
      - db
    ports:
      - 8080:8080
    networks:
      default:
        ipv4_address: 192.168.178.201
networks:
  default:
    external: true
    name: docker-macvlan
